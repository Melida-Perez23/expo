<Window x:Class="StatusBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatusBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">


    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" Height="30">
            <StatusBarItem>
                <TextBlock Name="txtInformacion" Width="200" />
            </StatusBarItem>
            <StatusBarItem>
                <Separator/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="txtPalabras" Width="200" />
            </StatusBarItem>

        </StatusBar>
        <TextBox AcceptsReturn="True" Name="txtDatos" KeyDown="txtDatos_KeyDown" />


    </DockPanel>


</Window>
